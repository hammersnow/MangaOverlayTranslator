<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/txtCreator">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="96dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Butonlar -->
            <Button
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Çeviri Servisini Başlat"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Durdur"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Durum: Kapalı"
                android:textColor="#EEEEEE"
                android:layout_marginTop="16dp"/>

            <!-- Ayarlar Başlığı -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ayarlar"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="32dp"/>

            <!-- Çeviri Aralığı -->
            <TextView
                android:id="@+id/lblInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Çeviri aralığı: 2 sn"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"/>
            <SeekBar
                android:id="@+id/seekInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="1"/>

            <!-- Opaklık -->
            <TextView
                android:id="@+id/lblOpacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panel opaklığı: %80"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>
            <SeekBar
                android:id="@+id/seekOpacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="60"
                android:progress="40"/>

            <!-- Panel rengi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panel rengi"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>
            <Spinner
                android:id="@+id/spPanelColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Yazı rengi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yazı rengi"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>
            <Spinner
                android:id="@+id/spTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Yazı Büyüklüğü -->
            <TextView
                android:id="@+id/lblFontSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yazı boyutu: 16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>
            <SeekBar
                android:id="@+id/seekFontSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="20"
                android:progress="4"/>

        </LinearLayout>
    </ScrollView>

    <!-- Sağ altta imza -->
    <TextView
        android:id="@+id/txtCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creator: Ekrem Gökberk ISCAN"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"/>
</RelativeLayout>
